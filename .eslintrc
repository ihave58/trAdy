{
    "parser": "babel-eslint",
    "extends": "airbnb-base/legacy",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "comma-dangle": [
            "error",
            "never"
        ],
        "linebreak-style": 0,
        "no-new": 0,
        "no-plusplus": 0,
        "no-use-before-define": 0,
        "no-trailing-spaces": 0,
        "no-unused-vars": [
            1
        ],
        "class-methods-use-this": [
            1
        ],
        "indent": [
            "error",
            4
        ]
    },
    "globals": {
        "document": true,
        "window": true,
        "location": true,
        "promise": true
    }
}
